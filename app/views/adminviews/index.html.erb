
<h3>All Members</h3>


<% @users.each do |user| %>
    <li>
    	<a href="/adminviews/<%= user.id %>"><%= user.email %></a>
    </li>
<% end %>

<br/>
<h3>All Recipes</h3>
<br/>
<% @recipes.each do |recipe| %>
<% @comments.each do |comment| %>
<table>
	<tr>
		<th>Recipe Name</th>
		<th> Created By</th>
		<th> Date Created</th>
		<th># Comments</th>

	</tr>
	<tr>
		<td><%= recipe.title %></td>
		<td><%= recipe.user.first_name %></td>
		<td><%= recipe.user.created_at.strftime(' %m/%d/%Y') %></td>
		<td><%= comment.recipe.id %></td>
		<td><%= link_to "Edit", edit_recipe_path(recipe) %></td>
		<td><%= link_to "Delete", recipe_path(recipe), method: :delete %></td>
	</tr>
</table>

<% end %>
<% end %>





<h3><%= link_to "Home", root_path %></h3>